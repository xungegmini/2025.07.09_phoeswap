{
	"name": "Official Anchor v0.30.1 Environment",

	// To jest kluczowy krok: używamy gotowego, oficjalnego obrazu od Anchor.
	// Zawiera on już Solanę, Rusta, Anchor i wszystkie zależności.
	"image": "solanafoundation/anchor:v0.30.1",

	// Te linie zapewniają, że Twój folder z projektem jest poprawnie zamontowany.
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

	// Dodatkowe ustawienia dla wygody pracy w VS Code.
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer"
			]
		}
	},

	// Uruchom jako domyślny użytkownik (root), ponieważ obraz jest już poprawnie skonfigurowany.
	"remoteUser": "root"
}